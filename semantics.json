[
  {
    "name": "interactiveVideo",
    "type": "group",
    "widget": "wizard",
    "label": "Interactive Video Editor",
    "fields": [
      {
        "name": "video",
        "type": "group",
        "label": "Upload video",
        "fields": [
          {
            "name": "files",
            "type": "video",
            "label": "Video files",
            "description": "Select the video files you wish to use in your interactive video. To ensure maximum support in browsers at least add a version of the video in webm and mp4 formats."
          },
          {
            "name": "copyright",
            "type": "text",
            "widget": "html",
            "enterMode": "p",
            "label": "Video copyright information",
            "optional": true,
            "description": "Information regarding copyright of the video and elements used in the video.",
            "tags": [
              "strong",
              "em",
              "del",
              "a"
            ]
          }
        ]
      },
      {
        "name": "assets",
        "type": "group",
        "label": "Add interactions",
        "widget": "interactiveVideo",
        "video": "video/files",
        "fields": [
          {
            "name": "interactions",
            "type": "list",
            "field": {
              "name": "interaction",
              "type": "group",
              "fields": [
                {
                  "name": "duration",
                  "type": "group",
                  "widget": "duration",
                  "label": "Display time",
                  "fields": [
                    {
                      "name": "from",
                      "type": "number"
                    },
                    {
                      "name": "to",
                      "type": "number"
                    }
                  ]
                },
                {
                  "name": "pause",
                  "label": "Pause",
                  "description": "Set playback on pause when this interaction is reached.",
                  "type": "boolean"
                },
                {
                  "name": "label",
                  "type": "text",
                  "widget": "html",
                  "label": "Label",
                  "description": "Label displayed next to interaction icon.",
                  "optional": true,
                  "enterMode": "p",
                  "tags": [
                    "p"
                  ]
                },
                {
                  "name": "x",
                  "type": "number",
                  "widget": "none"
                },
                {
                  "name": "y",
                  "type": "number",
                  "widget": "none"
                },
                {
                  "name": "action",
                  "type": "library",
                  "options": [
                    "H5P.Nil 1.0",
                    "H5P.Text 1.0",
                    "H5P.Table 1.0",
                    "H5P.Link 1.0",
                    "H5P.Image 1.0",
                    "H5P.MultiChoice 1.0",
                    "H5P.Blanks 1.0",
                    "H5P.DragQuestion 1.0",
                    "H5P.Summary 1.1"
                  ]
                }
              ]
            }
          },
          {
            "name": "bookmarks",
            "type": "list",
            "field": {
              "name": "bookmark",
              "type": "group",
              "fields": [
                {
                  "name": "time",
                  "type": "number"
                },
                {
                  "name": "label",
                  "type": "text"
                }
              ]
            }
          }
        ]
      },
      {
        "name": "summary",
        "type": "library",
        "label": "Summary task",
        "options": [
          "H5P.Summary 1.1"
        ],
        "default": {
          "library": "H5P.Summary 1.1",
          "params": {}
        }
      }
    ]
  }
]
